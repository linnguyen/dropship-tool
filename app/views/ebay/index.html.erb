<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <h2><strong>Find me in app/views/ebay/get_product.html.erb </strong>
      </h2>
      <!-- Start form -->
      <%= form_tag crawl_path do %>
        <div class="form-group">
          <%= text_field_tag :url, "", class: 'form-control', placeholder: 'Enter the url' %>
        </div>
        <div class="form-check">
          <%= submit_tag "Scrape", class: "btn btn-primary" %>
        </div>
      <% end %>
      <!-- End form -->
    </div>
  </div>



  <% if @description %>
    <div class="row" style="margin-top: 100px;">
      <%= form_tag add_fixed_price_item_path do %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <label>Valid Title</label>
          <div class="form-group">
            <%= text_field_tag :url, @valid_title, class: 'form-control' %>
          </div>
          <label>Price</label>
          <div class="form-group">
            <%= text_field_tag :url, "", class: 'form-control' %>
          </div>
          <label>Suggested Category Id</label>
          <div class="form-group">
            <%= text_field_tag :url, @categoryId, class: 'form-control' %>
          </div>
          <label>Description</label>
          <div class="form-group">
            <%= cktext_area_tag :body, @description %>
          </div>
          <div class="form-check">
            <%= submit_tag "Send to ebay", class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

</div>



